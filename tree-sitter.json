{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "doctext",
      "camelcase": "DocText",
      "title": "DocText",
      "scope": "source.doctext",
      "file-types": [
        "dtxt",
        "txt"
      ],
      "injection-regex": "^doctext$",
      "class-name": "TreeSitterDoctext"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "Tree-sitter parser for writing documentation in plaintext(usually as comments in code)",
    "authors": [
      {
        "name": "MD. Mouinul Hossain",
        "email": "mdmouinulhossainshawon@gmail.com",
        "url": "https://github.com/OXY2DEV/"
      }
    ],
    "links": {
      "repository": "https://github.com/OXY2DEV/tree-sitter-doctext"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}
