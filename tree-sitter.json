{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "comment",
      "camelcase": "Comment",
      "title": "Comment",
      "scope": "source.comment",
      "file-types": [
        "dtxt",
        "comment"
      ],
      "highlights": "queries/highlights.scm",
      "injection-regex": "^comment$",
      "class-name": "TreeSitterComment"
    }
  ],
  "metadata": {
    "version": "2.0.0",
    "license": "MIT",
    "description": "Tree-sitter parser for writing documentation in plaintext(usually as comments in code)",
    "authors": [
      {
        "name": "MD. Mouinul Hossain",
        "email": "mdmouinulhossainshawon@gmail.com",
        "url": "https://github.com/OXY2DEV/"
      }
    ],
    "links": {
      "repository": "https://github.com/OXY2DEV/tree-sitter-comment"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}
