{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "doctext",
  "rules": {
    "documentation": {
      "type": "REPEAT",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "task"
          },
          {
            "type": "SYMBOL",
            "name": "paragraph"
          }
        ]
      }
    },
    "task": {
      "type": "PREC_RIGHT",
      "value": 0,
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "ALIAS",
            "content": {
              "type": "PATTERN",
              "value": "\\w+"
            },
            "named": true,
            "value": "label"
          },
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "decorations"
              },
              {
                "type": "BLANK"
              }
            ]
          },
          {
            "type": "IMMEDIATE_TOKEN",
            "content": {
              "type": "STRING",
              "value": ":"
            }
          },
          {
            "type": "ALIAS",
            "content": {
              "type": "REPEAT1",
              "content": {
                "type": "SYMBOL",
                "name": "_inline"
              }
            },
            "named": true,
            "value": "subject"
          },
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "STRING",
                "value": "\n"
              },
              {
                "type": "BLANK"
              }
            ]
          }
        ]
      }
    },
    "decorations": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "("
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SEQ",
            "members": [
              {
                "type": "SYMBOL",
                "name": "_decoration"
              },
              {
                "type": "CHOICE",
                "members": [
                  {
                    "type": "STRING",
                    "value": ","
                  },
                  {
                    "type": "BLANK"
                  }
                ]
              }
            ]
          }
        },
        {
          "type": "STRING",
          "value": ")"
        }
      ]
    },
    "_decoration": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "mention"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "word"
          },
          "named": true,
          "value": "topic"
        }
      ]
    },
    "paragraph": {
      "type": "PREC_RIGHT",
      "value": 0,
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "REPEAT1",
            "content": {
              "type": "SYMBOL",
              "name": "_inline"
            }
          },
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "PATTERN",
                "value": "\\n\\n+"
              },
              {
                "type": "BLANK"
              }
            ]
          }
        ]
      }
    },
    "_inline": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "code"
        },
        {
          "type": "SYMBOL",
          "name": "bold"
        },
        {
          "type": "SYMBOL",
          "name": "italic"
        },
        {
          "type": "SYMBOL",
          "name": "issue_reference"
        },
        {
          "type": "SYMBOL",
          "name": "url"
        },
        {
          "type": "SYMBOL",
          "name": "word"
        },
        {
          "type": "SYMBOL",
          "name": "number"
        },
        {
          "type": "SYMBOL",
          "name": "punctuation"
        },
        {
          "type": "SYMBOL",
          "name": "mention"
        }
      ]
    },
    "issue_reference": {
      "type": "TOKEN",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SEQ",
            "members": [
              {
                "type": "STRING",
                "value": "#"
              },
              {
                "type": "PATTERN",
                "value": "\\d+"
              }
            ]
          },
          {
            "type": "SEQ",
            "members": [
              {
                "type": "PATTERN",
                "value": "[a-zA-Z0-9_-]+"
              },
              {
                "type": "STRING",
                "value": "/"
              },
              {
                "type": "PATTERN",
                "value": "[a-zA-Z0-9_-]+"
              },
              {
                "type": "STRING",
                "value": "#"
              },
              {
                "type": "PATTERN",
                "value": "\\d+"
              }
            ]
          }
        ]
      }
    },
    "url": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "CHOICE",
                "members": [
                  {
                    "type": "STRING",
                    "value": "http://"
                  },
                  {
                    "type": "STRING",
                    "value": "https://"
                  }
                ]
              },
              {
                "type": "BLANK"
              }
            ]
          },
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "STRING",
                "value": "www."
              },
              {
                "type": "BLANK"
              }
            ]
          },
          {
            "type": "PATTERN",
            "value": "[a-zA-Z0-9@:%_\\+.~#=-]{2,256}"
          },
          {
            "type": "STRING",
            "value": "."
          },
          {
            "type": "PATTERN",
            "value": "[a-z]{2,6}"
          },
          {
            "type": "PATTERN",
            "value": "[a-zA-Z0-9@:%_\\+.~#?&//=-]+"
          }
        ]
      }
    },
    "code": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "`"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "STRING",
                "value": "\\`"
              },
              {
                "type": "PATTERN",
                "value": "[^`]"
              }
            ]
          }
        },
        {
          "type": "STRING",
          "value": "`"
        }
      ]
    },
    "italic": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "*"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "STRING",
                "value": "\\*"
              },
              {
                "type": "PATTERN",
                "value": "[^*]"
              }
            ]
          }
        },
        {
          "type": "STRING",
          "value": "*"
        }
      ]
    },
    "bold": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "**"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "STRING",
                "value": "\\*"
              },
              {
                "type": "PATTERN",
                "value": "[^*]"
              }
            ]
          }
        },
        {
          "type": "STRING",
          "value": "**"
        }
      ]
    },
    "word": {
      "type": "PATTERN",
      "value": "\\w+"
    },
    "number": {
      "type": "CHOICE",
      "members": [
        {
          "type": "PATTERN",
          "value": "\\.\\d+"
        },
        {
          "type": "PATTERN",
          "value": "\\d+"
        },
        {
          "type": "PATTERN",
          "value": "\\d+\\.\\d+"
        }
      ]
    },
    "punctuation": {
      "type": "PATTERN",
      "value": "\\p{P}+",
      "flags": "u"
    },
    "mention": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "@"
          },
          {
            "type": "PATTERN",
            "value": "\\w+"
          }
        ]
      }
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}